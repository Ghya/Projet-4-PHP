{% extends "layout.html.twig" %}

{% block title %}Tableau de Bord{% endblock %}

{% block content %}

<div id="board_block_page">

    <div class="container">

        <div  class="row">
            <div id="board_title" class="col-md-offset-3 col-md-6">
                <h2><i class="fa fa-book" style="margin-right:20px" aria-hidden="true"></i>Tableau de bord</h2>
                <p>Pour commencer la lecture, cliquez sur le chapitre désiré</p>
                <a href="{{ path('chapter', { 'id': $_COOKIE['marker'] }) }}">Chapitre Suivant</a>
                
            </div>
        </div>

        <div id="board_container"  class="row">

            {% for chapter in chapters %}

                <a class="chapter_title" href="{{ path('chapter', { 'id': chapter.id }) }}">
                    <div class="anim_grow board_chapter_container col-md-10 col-md-offset-1">
                        <h2>Chapitre : {{ chapter.id }}</h2>
                        <h3>{{ chapter.title }}</h3>
                        <p><strong>Date de publication : </strong> {{ chapter.date }}</p>
                    </div>
                </a>

            {% endfor %}

        </div>
    </div>

</div>

    


{% endblock %}