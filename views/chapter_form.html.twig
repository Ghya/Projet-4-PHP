{% extends 'layout.html.twig' %}
{% set adminMenu = true %}

{% block title %} Gestionnaire de chapitre{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}

<div class="well">
{{ form_start(chapterForm, { 'attr': {'class': 'form-horizontal'} }) }}
    
    <div class="form-group">
        {{ form_label(chapterForm.title, null, { 'label_attr':  {
            'class': 'col-sm-3 control-label'
        }}) }}
        <div class="col-md-6 col-sm-4">
            {{ form_errors(chapterForm.title) }}
            {{ form_widget(chapterForm.title, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(chapterForm.content, null,  { 'label_attr':  {
            'class': 'col-sm-3 control-label'
        }}) }}
        <div class="col-sm-6">
            {{ form_errors(chapterForm.content) }}
            {{ form_widget(chapterForm.content, { 'attr':  {
                'class': 'form-control chapter',
                'rows': '15'
            }}) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-7 col-md-4">
            <a class="btn btn-danger" style="margin-right:15px" href="{{ path('admin') }}">Annuler</a>
            <input type="submit" class="btn btn-primary" value="Sauvegarder" />
        </div>
    </div>
{{ form_end(chapterForm) }}
</div>
{% endblock %}