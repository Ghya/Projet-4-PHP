{% extends "layout.html.twig" %}

{% block title %}Tableau de bord{% endblock %}

{% block content %}

<div id="board_blockpage">

    <div class="container">

        <div class="row">

            <div class="col-md-8">

                <div id="board_header">
                    <h2>Tableau de bord</h2>
                    <p>20 000 lieux sous les mers, Jules Verne</p>
                </div>

                <div id="board_body">
                    <div id="board_chap_container">

                        {% for chapter in chapters %}

                            <a style="text-decoration:none" class="chapter_ref" href="{{ path('chapter', { 'id': chapter.id }) }}">
                                <div class="anim_grow board_chapter_container">
                                    <h3 class="chapter_title">Chapitre : {{ chapter.id }}</h3>
                                    <h5>{{ chapter.title }}</h3>
                                    <p>Publi√© le : {{ chapter.date }}</p>
                                </div>
                            </a>

                        {% endfor %}    

                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div id="board_right_panel">

                    <div id="panel_box1">
                        
                        <h4>Marque page</h4>

                        <div class="panel_block_list">
                            {% if marker is defined %}
                                <a href="{{ path('chapter', {'id': marker}) }}">
                                    <div class="block_list_unit hover1">
                                        <p>Retour marquage<p>
                                        <p style="margin:0;font-size:11px">(Chapitre {{ marker }} page {{ page }})</p>
                                    </div>
                                </a>
                            {% endif %}
                        </div>

                    </div>

                    <div id="panel_box2">
                        <h4>Dernier post :</h4>
                        <div class="panel_block_list">
                        {% if lastChapter %}
                            <a href="{{ path('chapter', {'id': lastChapter.id}) }}"><div class="block_list_unit hover1">Chapitre {{lastChapter.id}}</div></a>
                        {% endif %}
                        </div>
                    </div>

                    <div id="panel_box4">
                        <h4>Annexe</h4>
                        <div class="panel_block_list">
                            <a href="http://wikipedia.fr"><div class="block_list_unit hover1">Wikipedia</div></a>
                            <a href="http://le-dictionnaire.com/"><div class="block_list_unit hover1">Dictionnaire</div></a>
                        </div>
                    </div>

                    <div id="panel_box5">
                        <h4>Suivre l'auteur</h4>
                        <div class="panel_block_list">
                            <div class="block_list_unit">Facebook</div>
                            <div class="block_list_unit">Twitter</div>
                            <div class="block_list_unit">Google +</div>
                        </div>
                    </div>

                                        
                        
                </div>
            </div>

        </div>

    </div>

</div>

{% endblock %}